#!/bin/bash

# infinite version of diceRoll!

usage() {
	echo "Usage:"
	echo "	<NdM>+, where N > 0 and M > 1"
	echo "	Enter one or more valid dice rolls."
	echo "Example:"
	echo "	4d6 3d20"
}

usage
while read -r i; do
	if [ "$i" == 'quit' ] || [ "$i" == 'exit' ] || [ "$i" == 'bye' ]; then
		echo 'Thank you for playing!' && exit
	fi
	./diceRoll $i
done
